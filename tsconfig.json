{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "lib-es6",
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "declaration": true,
        "declarationDir": "./types",
        "sourceMap": true,
        "declarationMap": true,
        "jsx": "react",
        "jsxFactory": "vscpp",
		"jsxFragmentFactory": "vscppf",
        "allowJs": true,
        "resolveJsonModule": true,
        "noEmitOnError": false,
        "noUnusedLocals": false,
        "strictNullChecks": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ES2022"
        ],
        "paths": {
            "@hpcc-js/*": [
                "./node_modules/@hpcc-js/*",
                "../hpcc-js/packages/*"
            ]
        },
        "types": [
            "vscode-notebook-renderer"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
}